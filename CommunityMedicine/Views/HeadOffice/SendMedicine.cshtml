@model CommunityMedicine.Models.SendMedicine

@{
    ViewBag.Title = "Send Medicine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Send Medicine To Center</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label for="District" class="col-sm-2 control-label">District Name</label>
            <div class="col-sm-10">
                <select class="form-control" id="Districtname"></select>
            </div>
        </div>
        <div class="form-group">
            <label for="Thana" class="col-sm-2 control-label">Thana Name</label>
            <div class="col-sm-10">
                <select class="form-control" id="Thananame"></select>
            </div>
        </div>

        <div class="form-group">
            <label for="Center" class="col-sm-2 control-label">Center Name</label>
            <div class="col-sm-10">
                <select class="form-control" id="Centername"></select>
            </div>
        </div>
        <h2> Add Medicine </h2>

        <div class="form-group">
            <label for="SelectMedicine" class="col-sm-2 control-label">Select Medicine</label>
            <div class="col-sm-10">
                <select class="form-control" id="SelectMedicine"></select>
            </div>
        </div>
        
            <div class="form-group">
                <label for="Quantity" class="col-sm-2 control-label">Quantity</label>
                <input type="text" class="form-control" id="Quantity" placeholder="Enter Quantity">
            </div>
        
           
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
</div>
}
<button onclick="appendText()">Add</button>
<div class="table-responsive">
    <table class="table">
        <tr>Quantity</tr><br/>
        <tr id="qty" ></tr>
    </table>
</div>
