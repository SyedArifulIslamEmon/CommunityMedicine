@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "Disease Entry";
}

<h2>Disease Entry</h2>


<form role="form" id="DiseaseEntry">
    <div class="form-group">
        <label for="DiseaseName">Disease Name:</label>
        <input type="text" class="form-control" name="DiseaseName" id="DiseaseName">
    </div>
    <div class="form-group">
        <label for="Description">Description:</label>
        <textarea name="Description" id="Description" class="form-control" rows="2"></textarea>
    </div>
    <div class="form-group">
        <label for="TreatmentProcedure">Treatment Procedure:</label>
        <textarea name="TreatmentProcedure" id="TreatmentProcedure" class="form-control" rows="2"></textarea>
    </div>
    <div class="form-group">
        <label for="PreferDrug">Prefer Drug:</label>
        <textarea name="PreferDrug" id="PreferDrug" class="form-control" rows="2"></textarea>
    </div>
    <button type="submit" class="btn btn-default">Save</button>
</form>
@section scripts{
    <script>
        $(document).ready(function () {
            $("#DiseaseEntry").submit(function () {
                var diseaseName = $("#DiseaseName").val();
                var description = $("#Description").val();
                var treatmentProcedure = $("#TreatmentProcedure").val();
                var preferDrug = $("#PreferDrug").val();
                var myData = { diseaseName: diseaseName, description: description, treatmentProcedure: treatmentProcedure, preferDrug: preferDrug };
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("InsertDisease", "HeadOffice")',
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(myData),
                    dataType: "json",
                    //success: function (data) {
                    //    $('#myinfoTable tbody').append('<tr><td>' + data.genericname + '</td><td>' + data.measurementunit + '</td></tr>');
                    //},
                });
                //return false;
            });
        });
    </script>
}


